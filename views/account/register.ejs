<!-- content heading -->
<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
     res.redirect('/')
   } %>

   <%- messages() %>

   <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
<div class="login">
    <form id="registerForm" action="/account/register" method="post">
        <fieldset>
            <p>
            <label for="account_firstname"><b>First Name*:</b></label>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
        </p>
        <p>
            <label for="account_lastname"><b>Last Name*:</b></label>
            <input type="text" placeholder="Enter last name" name="account_lastname" required value="<%= locals.account_lastname %>">
        </p>
        <p>
            <label for="account_email">Email*:</label>
            <input type="email" name="account_email" placeholder="Enter Email" required value="<%= locals.account_email %>">
        </p>
        <div>
          <label for="account_password">Password**:</label>
          <div  class="input-wrapper">
            <input type="password" name="account_password" id="password" placeholder="Enter Password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,}$">
            <i class="fas fa-eye" id="togglePassword"></i>
          </div>
        </div>
        <p class="requirements">* required</p>
        <p class="requirements">** 8 char min, with at least 1 upper, 1 number, 1 special char</p>
        <button type="submit" id="submit">Register</button>
    </fieldset>
</form>
  </div>
  <script src="/js/script.js"></script>
