<!-- content heading -->
<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
     res.redirect('/')
   } %>

   <%- messages() %>
   <%= 'Test message' %>

<div class="login">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <p>
          <label for="account_email">Email*:</label>
          <input type="email" name="account_email" placeholder="Enter Email" required>
      </p>
      <div>
        <label for="account_password">Password**:</label>
        <div  class="input-wrapper">
          <input type="password" name="account_password" id="password" placeholder="Enter Password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,}$">
          <i class="fas fa-eye" id="togglePassword"></i>
        </div>
      </div>
      <p class="requirements">* required</p>
        <p class="requirements">** 8 char min, with at least 1 upper, 1 number, 1 special char</p>
      <button type="submit" id="submit">Log In</button>
  </fieldset>
</form>
  <span class="register">Don't have an account? <a href="/account/register">Register</a></span>
</div>
<script src="/js/script.js"></script>
