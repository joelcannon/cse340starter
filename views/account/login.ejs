<!-- content heading -->
<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
     res.redirect('/')
   } %>

   <%- messages() %>
   <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="login">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
          <label for="account_email">Email*:</label>
          <div class="input-wrapper">
            <input type="email" name="account_email" placeholder="Enter Email" required value="<%= locals.account_email %>" title="Please enter a valid email address.">
          <i class="fas fa-check-circle valid-icon"></i>
          </div>
      <div>
        <label for="account_password">Password*:</label>
        <div  class="input-wrapper">
          <input type="password" name="account_password" id="password" placeholder="Enter Password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,}$" title="At least 8 characters long with a minimum of 1 uppercase, 1 digit and 1 special char.">
          <i class="fas fa-eye" id="togglePassword"></i>
        </div>
      </div>
      <p class="requirements">* required</p>
      <button type="submit" id="submit">Log In</button>
  </fieldset>
</form>
  <span class="register">Don't have an account? <a href="/account/register">Register</a></span>
</div>
<script src="/js/script.js"></script>
