<!-- content heading -->
<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
     res.redirect('/')
   } %>

   <%- messages() %>
   <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="management">
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p> You're logged in.</p>
  <a title="Click to manage account" href="/account/manage-account">manage account</a>

  <% if(locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <a title="Click to manage inventory" href="/inv/">update inventory</a>
    <% } %>


</div>

